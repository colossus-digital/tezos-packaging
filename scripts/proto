# SPDX-License-Identifier: LicenseRef-MIT-TQ

edit(){
  cat ../protocols.json | jq "$@" | sponge ../protocols.json
}

add(){
  edit ".$1 += [\"$2\"]"
}

remove(){
  edit "del(.$1[] | select(. == \"$2\"))"
}

removeAll(){
  remove active $1
  remove allowed $1
  remove ignored $1
}

command=$1
shift
case $command in
  activate) removeAll $1; add active $1;;
  allow) removeAll $1; add allowed $1;;
  ignore) removeAll $1; add ignored $1;;
  forget) removeAll $1;;
  *) jq . ../protocols.json
esac